<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="446dp"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   사이버범죄 신고시스템 (ECRM)"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   바로가기 - https://ecrm.police.go.kr"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    관련 신고 기관"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     인터넷 거래 관련 불만"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="     - 서울시전자상거래센터 (02-2133-4986)            "
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageButton
                android:id="@+id/call1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/call"
                android:scaleType="fitXY"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     지적재산권(위조상품 등) 침해신고"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="     - 산업재산침해 신고센터 (1666-6464)                 "
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageButton
                android:id="@+id/call2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/call"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     소액결제/보이스피싱/개인정보 침해 민원"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="     - 전자문서 전자거래 분쟁조정위원회 (118)           "
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageButton
                android:id="@+id/call3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/call"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     도박/음란물 및 불법 스팸 유해정보 차단 신고"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="     - 한국소비 자원 (1372)                                           "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/call4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/call" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     사이버 인격침해 관련 삭제/차단/분쟁조정"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="     - 한국 저작권보호원 (1588-0190)                          "
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageButton
                android:id="@+id/call5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/call"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="     사이버 범죄 긴급신고 112 (무료)                       "
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/call6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:src="@drawable/call"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="11dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:text="     기타 민원상담 182 (유료)                                    "
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/call7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/call" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/back" />

</LinearLayout>